<div class="container" style="padding: 1rem;">
  <form>
    <div class="form-group row">
      <label for="frmName" class="col-xs-12 col-md-2 col-form-label">
        {{{t.frmNameLbl}}}
      </label>
      <div class="col-xs-12 col-md-10">
        <input type="text" class="form-control"
               id="frmName" name="Nome" placeholder="{{{t.frmNamePlc}}}"
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="frmEmail" class="col-xs-12 col-md-2 col-form-label">
        {{{t.frmEmailLbl}}}
      </label>
      <div class="col-xs-12 col-md-10">
        <input type="email" class="form-control"
               id="frmEmail" name="Nome" placeholder="{{{t.frmEmailPlc}}}"
        />
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-12 offset-md-2 col-md-10">
        <button type="submit" class="btn btn-primary">{{{t.frmSubmit}}}</button>
      </div>
    </div>
  </form>
</div>
